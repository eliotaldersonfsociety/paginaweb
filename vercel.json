{
    "version": 2,
    "aplicacion": [
      {
        "src": "front",
        "config": {
          "rootDirectory": "front"
        }
      },
      {
        "src": "api",
        "config": {
          "rootDirectory": "api"
        }
      }
    ],
    "builds": [
      { "src": "front/package.json", "use": "@vercel/static-build", "config": { "distDir": "front/dist" } },
      { "src": "api/**/*.ts", "use": "@vercel/node", "config": { "includeFiles": ["api/**/*"] } }
    ],
    "routes": [
      { "src": "/(.*)", "dest": "frontend/$1" },
      { "src": "/api/(.*)", "dest": "api/$1" }
    ]
  }
  
